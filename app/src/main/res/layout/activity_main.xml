<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/sky"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/sky"
            android:src="@drawable/sky" />

        <ImageView
            android:id="@+id/sun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/sun"
            android:scaleType="fitCenter"
            android:src="@drawable/sun" />

        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-150dp"
            android:contentDescription="@string/cloud"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-150dp"
            android:contentDescription="@string/cloud"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/meteor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/meteor"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/meteor"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/grass"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/grass"
            android:src="@drawable/grass" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/clock"
            android:padding="10dp"
            android:src="@drawable/clock" />

        <ImageView
            android:id="@+id/hour_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/clock"
            android:padding="10dp"
            android:src="@drawable/hour_hand" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>